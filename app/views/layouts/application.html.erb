<!DOCTYPE html>
<html>
  <head>
    <title>Seat Yourself</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


        <p><%= link_to 'Home', restaurants_view_index_customer_url%> <%if params[:user][:role] == 'owner'%>
        <%else%>
        <%link_to 'HOME', restaurants_view_index_owner_url%>
      </p>
    <%end%>
    <% if current_user %>
      <p>
        Hello <%= current_user.email %>!
        |
        <%= link_to 'Logout', sessions_path, method: :delete %>
      </p>

    <% else %>
      <p>
        <%= link_to 'Create Account', new_user_path %>
        |
        <%= link_to 'Login', new_sessions_path %>
      </p>
    <% end %>

    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <p class="<%= key %>">
          <%= value %>
        </p>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
